{% extends 'base.html.twig' %}

{% block title %}Mes réservations - Le Délice{% endblock %}

{% block body %}
    <section class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 mx-auto">
                    <h1 class="text-center mb-5">Mes réservations</h1>

                    {% if reservations|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Date</th>
                                        <th>Heure</th>
                                        <th>Personnes</th>
                                        <th>Statut</th>
                                        <th>Plats commandés</th>
                                        <th class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for reservation in reservations %}
                                        <tr>
                                            <td>{{ reservation.date ? reservation.date|date('d/m/Y') : '' }}</td>
                                            <td>{{ reservation.heure ? reservation.heure|date('H:i') : '' }}</td>
                                            <td>{{ reservation.nbPersonne }}</td>
                                            <td>
                                                <span class="badge rounded-pill bg-{{ 
                                                    reservation.statut == 'confirmée' ? 'success' : 
                                                    (reservation.statut == 'refusée' ? 'danger' : 'warning') 
                                                }}">
                                                    {{ reservation.statut|capitalize }}
                                                </span>
                                            </td>
                                            <td>
                                                {% if reservation.plats is empty %}
                                                    <em>Aucun plat sélectionné</em>
                                                {% else %}
                                                    {% for plat in reservation.plats %}
                                                        {{ plat.nom }}{% if not loop.last %}, {% endif %}
                                                    {% endfor %}
                                                {% endif %}
                                            </td>
                                            <td class="text-center">
                                                <a href="{{ path('app_reservation_show', {'id': reservation.id}) }}" 
                                                   class="btn btn-sm btn-outline-primary me-2">
                                                    Voir
                                                </a>
                                                {% if reservation.statut == 'en_attente' %}
                                                    <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" 
                                                       class="btn btn-sm btn-outline-warning">
                                                        Modifier
                                                    </a>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-x display-1 text-muted mb-4"></i>
                            <h3 class="text-muted">Vous n'avez pas encore de réservation</h3>
                            <p class="lead text-muted">Réservez votre table pour découvrir nos délicieux plats !</p>
                        </div>
                    {% endif %}

                    <!-- Bouton nouvelle réservation -->
                    <div class="text-center mt-5">
                        <a href="{{ path('app_reservation_new') }}" 
                           class="btn btn-getstarted btn-lg px-5">
                            Faire une nouvelle réservation
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}